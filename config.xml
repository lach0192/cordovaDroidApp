<?xml version='1.0' encoding='utf-8'?>
<widget id="ca.edumedia.lach0192.MADDfinal" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>Quidditch-Final-LACH0192-Eric</name>
    <description>
        MAD9014 Final Fall 2016 by Eric Lachapelle
    </description>
    <author email="lach0192@algonquinlive.com" href="http://cordova.io">
        Eric Lachapelle
    </author>
    <content src="index.html" />
    
    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="5000" />
    
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <platform name="android">
        <allow-intent href="market:*" />
        
        <splash density="port-ldpi" src="res/screens/Splashscreen-320x480.png" />
        <splash density="port-mdpi" src="res/screens/Splashscreen-480x800.png" />
        <splash density="port-hdpi" src="res/screens/Splashscreen-720x1280.png" />
        <splash density="port-xhdpi" src="res/screens/Splashscreen-960x1600.png" />
        <splash density="land-ldpi" src="res/screens/Splashscreen-480x320.png" />
        <splash density="land-mdpi" src="res/screens/Splashscreen-800x480.png" />
        <splash density="land-hdpi" src="res/screens/Splashscreen-1280x720.png" />
        <splash density="land-xhdpi" src="res/screens/Splashscreen-1600x960.png" />
        
        <icon density="ldpi" src="res/icons/Icon-48x48.png" />
        <icon density="mdpi" src="res/icons/Icon-72x72.png" />
        <icon density="hdpi" src="res/icons/Icon-96x96.png" />
        <icon density="xhdpi" src="res/icons/Icon-144x144.png" />
        <icon density="xxhdpi" src="res/icons/Icon-192x192.png" />
        
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>
</widget>
